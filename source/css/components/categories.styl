$hackerRed = #f03838
$hackerGray = #9e9e9e

// 分类页样式
.categories-cloud
  display flex
  flex-wrap wrap
  justify-content center
  gap 15px
  
  .post-categories
    flex 0 0 calc(25% - 15px)
    max-width calc(25% - 15px)
    margin-right 0 !important
    box-sizing border-box
    
    @media screen and (max-width: 768px)
      flex 0 0 calc(50% - 15px)
      max-width calc(50% - 15px)
    
    a
      display block
      width 100%
      text-align center
      padding 8px 10px
      border-radius 999em
      background rgba(0, 0, 0, 0.05)
      transition all 0.3s ease
      
      &:hover
        color #fff
        background-color $hackerRed
        border-color $hackerRed
        transform translateY(-2px)

article
  .categories-cloud
    width 100%
    margin 8rem 0
    text-align center
    line-height 2rem

  .categories-cloud > spannot(last-child)
    margin-right 3rem

  .categories-cloud > span
    display inline-block

  .categories-cloud > span > span
    line-height 1
    vertical-align middle

  .archive-categories

  .archive-categories > spannot(last-child)
    margin-right 3rem

  .archive-categories > span
    display inline-block

  .archive-categories > span > span
    line-height 1
    vertical-align middle

  .archive-categories, .categories-cloud
    margin 8rem 0
    font-size 1.3rem
    color #9e9e9e

    a
      color $hackerGray
      &:hover
        color #fff
        background-color $hackerRed
        border-color $hackerRed

    i
      vertical-align middle
      color #9e9e9e
      margin-right 0.5rem

    .post-categories
      margin-right 3rem

      a
        &:before
          content "#"

        &:not(:last-of-type):after
          content ","
          padding-right 5px

// 暗色模式样式
[data-theme="dark"]
  // 分类页样式
  .categories-cloud
    .post-categories
      a
        background rgba(255, 255, 255, 0.1)
        color #fff
        padding 8px 10px
        border-radius 999em
        
        &:hover
          color #fff !important
          background-color var(--link-color)
          border-color var(--link-color)
          transform translateY(-2px)

  .category-list
    .category-list-title
      color #fff !important
    
    .category-list-item
      a
        color #fff !important
        
        &:hover
          color #fff !important
          background-color var(--link-color)
          border-color var(--link-color)
          padding 2px 8px
          border-radius 999em
          transition all 0.3s ease
      
      .category-list-count
        color rgba(255, 255, 255, 0.7) !important
        background rgba(255, 255, 255, 0.1)
  
  .categories-title
    color #fff !important
  
  .category-all-page
    .category-all-title
      color #fff !important
    
    .category-all
      a
        color #fff !important
        background rgba(255, 255, 255, 0.1)
        
        &:hover
          color #fff !important
          background-color var(--link-color)
          border-color var(--link-color)
      
      .category-count
        color rgba(255, 255, 255, 0.7) !important

  // 分类泡泡样式
  article
    .categories-cloud,
    .archive-categories
      color rgba(255, 255, 255, 0.7)

      a
        color #fff !important
        background rgba(255, 255, 255, 0.1)
        padding 2px 8px
        border-radius 999em
        transition all 0.3s ease
        
        &:hover
          color #fff !important
          background-color var(--link-color)
          border-color var(--link-color)

        &:before
          color #fff !important

      i
        color rgba(255, 255, 255, 0.7)
