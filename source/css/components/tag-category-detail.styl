// 标签和分类详情页样式

// 共享样式
.tag-detail, .category-detail
  margin-bottom: 3rem
  
  header
    margin-bottom: 2rem
    border-bottom: 1px solid #eee
    padding-bottom: 1rem
    
    .article-title
      margin-bottom: 0.5rem
      font-size: 2rem
      font-weight: 600
      color: #333
      
      i
        margin-right: 0.5rem
        color: #555
    
    .tag-meta, .category-meta
      font-size: 0.9rem
      color: #666
      
      .tag-count, .category-count
        display: inline-block
        padding: 0.2rem 0.5rem
        background: #f5f5f5
        border-radius: 3px
        font-weight: 500

// 标签云
.tag-cloud
  display: flex
  flex-wrap: wrap
  gap: 0.8rem
  padding: 1rem
  background: #f9f9f9
  border-radius: 5px
  
  .tag-cloud-item
    display: inline-block
    padding: 0.3rem 0.8rem
    background: #fff
    border-radius: 20px
    color: #555
    text-decoration: none
    transition: all 0.2s ease
    border: 1px solid #eee
    font-size: 100%
    opacity: 0.7
    
    &[data-opacity]
      opacity: attr(data-opacity)
    
    &:hover
      background: #f0f0f0
      transform: translateY(-2px)
      box-shadow: 0 2px 5px rgba(0,0,0,0.05)
    
    &.active
      background: #f03838
      color: #fff
      border-color: #f03838
      opacity: 1 !important
      
      small
        color: rgba(255,255,255,0.8)
    
    small
      color: #999
      margin-left: 0.3rem

// 分类导航
.category-nav
  display: flex
  flex-wrap: wrap
  gap: 0.8rem
  padding: 1rem
  background: #f9f9f9
  border-radius: 5px
  
  .category-nav-item
    display: inline-block
    padding: 0.5rem 1rem
    background: #fff
    border-radius: 5px
    color: #555
    text-decoration: none
    transition: all 0.2s ease
    border: 1px solid #eee
    
    &:hover
      background: #f0f0f0
      transform: translateY(-2px)
      box-shadow: 0 2px 5px rgba(0,0,0,0.05)
    
    &.active
      background: #f03838
      color: #fff
      border-color: #f03838
      
      small
        color: rgba(255,255,255,0.8)
    
    i
      margin-right: 0.3rem
    
    small
      color: #999
      margin-left: 0.3rem

// 暗色模式下的样式
[data-theme="dark"]
  .tag-detail, .category-detail
    header
      border-bottom-color: #333
      
      .article-title
        color: #fff
        
        i
          color: #aaa
      
      .tag-meta, .category-meta
        color: #aaa
        
        .tag-count, .category-count
          background: #333
          color: #ddd
  
  // 暗色模式下的标签云
  .tag-cloud
    background: #2a2a2a
    
    .tag-cloud-item
      background: #333
      color: #ddd
      border-color: #444
      
      &:hover
        background: #444
        box-shadow: 0 2px 5px rgba(0,0,0,0.2)
      
      &.active
        background: var(--theme-color)
        color: #fff
        border-color: var(--theme-color)
      
      small
        color: #aaa
  
  // 暗色模式下的分类导航
  .category-nav
    background: #2a2a2a
    
    .category-nav-item
      background: #333
      color: #ddd
      border-color: #444
      
      &:hover
        background: #444
        box-shadow: 0 2px 5px rgba(0,0,0,0.2)
      
      &.active
        background: var(--theme-color)
        color: #fff
        border-color: var(--theme-color)
      
      small
        color: #aaa

// 响应式调整
@media (max-width: 768px)
  .tag-cloud, .category-nav
    padding: 0.8rem
    
  .tag-detail header, .category-detail header
    .article-title
      font-size: 1.5rem 