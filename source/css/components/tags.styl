$hackerRed = #f03838
$hackerGray = #9e9e9e

article
  .tags-cloud
    width 100%
    margin 8rem 0
    text-align center
    line-height 2rem

  .tags-cloud > spannot(last-child)
    margin-right 3rem

  .tags-cloud > span
    display inline-block

  .tags-cloud > span > span
    line-height 1
    vertical-align middle

  .archive-tags

  .archive-tags > spannot(last-child)
    margin-right 3rem

  .archive-tags > span
    display inline-block

  .archive-tags > span > span
    line-height 1
    vertical-align middle

  .archive-tags, .tags-cloud
    margin 8rem 0
    font-size 1.3rem
    color #9e9e9e

    a
      color $hackerGray
      &:hover
        color $hackerRed

    i
      vertical-align middle
      color #9e9e9e
      margin-right 0.5rem

    .post-tags
      margin-right 3rem

      a
        &:before
          content "#"

        &:not(:last-of-type):after
          content ","
          padding-right 5px

.tags
  margin-bottom 30px
  
  a
    margin-right 15px
    display inline-block
    text-decoration none
    border-radius 999em
    padding 0 10px
    color #333
    border 1px solid #333
    font-size 14px
    transition all 0.3s ease
    
    &:hover
      color #fff
      background-color $hackerRed
      border-color $hackerRed

// 暗色模式样式
[data-theme="dark"]
  .tags
    a
      color #fff
      border-color #fff
      background-color rgba(255, 255, 255, 0.1)
      
      &:hover
        color #fff
        background-color var(--link-color)
        border-color var(--link-color)

  .tag-cloud-tags
    a
      display: inline-block
      text-decoration: none
      border-radius: 999em
      padding: 2px 8px
      color: #fff
      background: rgba(255, 255, 255, 0.1)
      font-size: 14px
      transition: all 0.3s ease
      margin: 5px
      
      &:hover
        color: #fff
        background-color: var(--link-color)
        border-color: var(--link-color)

.tag-cloud-tags
  a
    display: inline-block
    text-decoration: none
    border-radius: 999em
    padding: 2px 8px
    color: #333
    background: #f2f2f2
    font-size: 14px
    transition: all 0.3s ease
    margin: 5px
    
    &:hover
      color: #fff
      background-color: $hackerRed
      border-color: $hackerRed

.post-tags
  margin: 0 0 20px
  
  a
    display: inline-block
    text-decoration: none
    border-radius: 999em
    padding: 2px 8px
    color: #333
    background: #f2f2f2
    font-size: 14px
    transition: all 0.3s ease
    margin: 0 5px 5px 0
    
    &:hover
      color: #fff
      background-color: $hackerRed
      border-color: $hackerRed

// 暗色模式样式
[data-theme="dark"]
  .tag-cloud-tags,
  .post-tags
    a
      color: #fff
      background: rgba(255, 255, 255, 0.1)
      
      &:hover
        color: #fff
        background-color: var(--link-color)
        border-color: var(--link-color)

  .tags-cloud,
  .archive-tags
    a
      color: #fff
      
      &:hover
        color: #fff !important
        background-color: var(--link-color)
        border-color: var(--link-color)

  .post-tags
    a
      &:before
        color: #fff
